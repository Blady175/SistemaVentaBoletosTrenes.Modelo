@model SistemaVentaBoletosTrenes.Modelo.Boleto

@{
    ViewData["Title"] = "Confirmación de Compra";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2><i class="bi bi-check-circle"></i> ¡Compra Exitosa!</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h3>Detalles de su boleto</h3>
                        <p class="text-muted">Guarde esta información para su referencia</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Información del Viaje</h5>
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item">
                                    <strong>Ruta:</strong> @Model.Ruta.Origen - @Model.Ruta.Destino
                                </li>
                                <li class="list-group-item">
                                    <strong>Fecha y Hora:</strong> @Model.Ruta.Horario.ToString("dd/MM/yyyy HH:mm")
                                </li>
                                <li class="list-group-item">
                                    <strong>Fecha de Compra:</strong> @Model.FechaCompra.ToString("dd/MM/yyyy HH:mm")
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>Información del Pasajero</h5>
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item">
                                    <strong>Categoría:</strong> @Model.Categoria.Nombre
                                </li>
                                <li class="list-group-item">
                                    <strong>Tipo de Asiento:</strong> @Model.Asiento.TipoAsiento
                                </li>
                                <!-- Agregado el Número de Asiento -->
                                <li class="list-group-item">
                                    <strong>Número de Asiento:</strong> @Model.Asiento.NumeroAsiento
                                </li>
                                <li class="list-group-item">
                                    <strong>Precio Total:</strong> $@Model.Precio.ToString("0.00")
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4">
                        <h5><i class="bi bi-info-circle"></i> Instrucciones importantes</h5>
                        <ul>
                            <li>Presente este número de boleto al abordar: <strong>@Model.BoletoID</strong></li>
                            <li>Llegue al menos 30 minutos antes de la salida</li>
                            <li>Traiga identificación válida</li>
                        </ul>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Volver al Inicio
                        </a>

                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    Gracias por elegir Turismo Ferroviario Ibarra
                </div>
            </div>
        </div>
    </div>
</div>
