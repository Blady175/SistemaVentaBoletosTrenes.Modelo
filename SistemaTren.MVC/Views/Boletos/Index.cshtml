@model IEnumerable<SistemaVentaBoletosTrenes.Modelo.Boleto>

@{
    ViewData["Title"] = "Index";
}

<h1>Boletos Vendidos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ruta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ruta.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asiento.TipoAsiento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BoletoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BoletoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BoletoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
