@model SistemaVentaBoletosTrenes.Modelo.Asiento
@{
    ViewData["Title"] = "Crear Asiento";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="NumeroAsiento" class="control-label"></label>
                <input asp-for="NumeroAsiento" class="form-control" />
                <span asp-validation-for="NumeroAsiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoAsiento" class="control-label"></label>
                <input asp-for="TipoAsiento" class="form-control" />
                <span asp-validation-for="TipoAsiento" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponible" /> @Html.DisplayNameFor(model => model.Disponible)
                </label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}