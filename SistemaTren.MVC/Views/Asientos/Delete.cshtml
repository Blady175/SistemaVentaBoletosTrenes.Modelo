@model SistemaVentaBoletosTrenes.Modelo.Asiento

@{
    ViewData["Title"] = "Eliminar Asiento";
    var tieneBoletos = ViewBag.TieneBoletos ?? false;
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (tieneBoletos)
    {
        <div class="alert alert-warning">
            <h4><i class="bi bi-exclamation-triangle"></i> Advertencia</h4>
            <p>Este asiento está asignado a boletos existentes. No puede ser eliminado.</p>
            <a asp-action="Index" class="btn btn-secondary mt-2">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
    }
    else
    {
        <div class="card shadow mt-4">
            <div class="card-body">
                <h3>¿Está seguro que desea eliminar este asiento?</h3>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.NumeroAsiento)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.NumeroAsiento)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.TipoAsiento)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.TipoAsiento)
                    </dd>

                    <dt class="col-sm-3">
                        Estado
                    </dt>
                    <dd class="col-sm-9">
                        @if (Model.Disponible)
                        {
                            <span class="badge bg-success">Disponible</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Ocupado</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="AsientoID" />
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Eliminación
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    }
</div>